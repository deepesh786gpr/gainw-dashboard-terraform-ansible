# Terraform Dashboard Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ANSIBLE_API_URL=http://localhost:5001

# Application Configuration
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=Terraform Dashboard

# GitHub Integration (Optional)
# REACT_APP_GITHUB_CLIENT_ID=your_github_client_id

# Feature Flags
REACT_APP_ENABLE_GITHUB_INTEGRATION=true
REACT_APP_ENABLE_ANSIBLE_INTEGRATION=true
REACT_APP_ENABLE_COST_ANALYSIS=true
REACT_APP_ENABLE_SECURITY_CENTER=true

# UI Configuration
REACT_APP_THEME=light
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e

# Analytics (Optional)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Error Tracking (Optional)
# REACT_APP_SENTRY_DSN=your_sentry_dsn

# Build Configuration
GENERATE_SOURCEMAP=true
REACT_APP_BUILD_DATE=2024-01-01
REACT_APP_GIT_COMMIT=main
