# ===========================================
# TERRAFORM DASHBOARD ENVIRONMENT CONFIG
# ===========================================

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_PATH=./data/terraform-dashboard.db
DATABASE_TYPE=sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_PROFILE=default
AWS_SDK_LOAD_CONFIG=1

# Terraform Configuration
TERRAFORM_PATH=/usr/local/bin/terraform
TERRAGRUNT_PATH=/usr/local/bin/terragrunt
TERRAFORM_WORKING_DIR=./terraform-workspace
TERRAFORM_LOG_LEVEL=INFO

# Ansible Configuration
ANSIBLE_PLAYBOOKS_DIR=../ansible-aws-playbooks
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_STDOUT_CALLBACK=json

# GitHub Integration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_APP_ID=your-github-app-id
GITHUB_PRIVATE_KEY_PATH=./keys/github-app-private-key.pem

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_TIMEOUT_MS=30000
API_RETRY_ATTEMPTS=3

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT_MINUTES=60
SESSION_SECURE=false
SESSION_SAME_SITE=lax

# Security Configuration
BCRYPT_SALT_ROUNDS=12
CORS_CREDENTIALS=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Notification Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/terraform-dashboard.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Development Configuration
DEBUG=terraform-dashboard:*
MOCK_AWS_SERVICES=true
MOCK_TERRAFORM_COMMANDS=true
ENABLE_API_DOCS=true
ENABLE_METRICS=true

# Production Configuration (Override in production)
# NODE_ENV=production
# MOCK_AWS_SERVICES=false
# MOCK_TERRAFORM_COMMANDS=false
# SESSION_SECURE=true
# LOG_LEVEL=warn
